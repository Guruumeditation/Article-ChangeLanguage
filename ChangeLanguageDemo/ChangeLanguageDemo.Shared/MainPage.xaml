<Page x:Class="ChangeLanguageDemo.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Button Content="{Binding ChangeLanguageButton,Source={StaticResource Translation}}"
                    Click="LanguageButton_OnClick" />

            <Button HorizontalAlignment="Center"
                    Content="{Binding TestButton,Source={StaticResource Translation}}"
                    Margin="0,50,0,0"
                    Click="TestButton_OnClick" />
        </StackPanel>
    </Grid>
</Page>